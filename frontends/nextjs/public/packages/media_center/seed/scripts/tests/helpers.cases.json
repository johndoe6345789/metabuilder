{
  "tv_helpers": {
    "valid_channel_ids": [
      { "input": "ch_001", "expected": true, "desc": "Valid channel ID with underscore" },
      { "input": "channel-42", "expected": true, "desc": "Valid channel ID with dash" },
      { "input": "", "expected": false, "desc": "Empty string returns nil" },
      { "input": null, "expected": false, "desc": "Nil input returns nil" }
    ],
    "schedule_hours": [
      { "hours": 1, "expected_entries": 2, "desc": "1 hour ahead" },
      { "hours": 6, "expected_entries": 12, "desc": "6 hours ahead" },
      { "hours": 24, "expected_entries": 48, "desc": "24 hours ahead" }
    ]
  },
  "radio_helpers": {
    "stream_formats": [
      { "format": "mp3", "expected_mime": "audio/mpeg", "desc": "MP3 format" },
      { "format": "aac", "expected_mime": "audio/aac", "desc": "AAC format" },
      { "format": "ogg", "expected_mime": "audio/ogg", "desc": "Ogg Vorbis format" },
      { "format": "flac", "expected_mime": "audio/flac", "desc": "FLAC format" }
    ],
    "bitrates": [
      { "bitrate": 64, "quality": "low", "desc": "64 kbps is low quality" },
      { "bitrate": 128, "quality": "medium", "desc": "128 kbps is medium quality" },
      { "bitrate": 256, "quality": "high", "desc": "256 kbps is high quality" },
      { "bitrate": 320, "quality": "high", "desc": "320 kbps is high quality" }
    ]
  },
  "retro_helpers": {
    "button_presses": [
      { "button": "a", "expected_mapped": "RETRO_DEVICE_ID_JOYPAD_A", "desc": "A button mapping" },
      { "button": "b", "expected_mapped": "RETRO_DEVICE_ID_JOYPAD_B", "desc": "B button mapping" },
      { "button": "start", "expected_mapped": "RETRO_DEVICE_ID_JOYPAD_START", "desc": "Start button mapping" },
      { "button": "select", "expected_mapped": "RETRO_DEVICE_ID_JOYPAD_SELECT", "desc": "Select button mapping" }
    ],
    "analog_ranges": [
      { "x": 0, "y": 0, "valid": true, "desc": "Center position" },
      { "x": 1.0, "y": 0, "valid": true, "desc": "Full right" },
      { "x": -1.0, "y": 0, "valid": true, "desc": "Full left" },
      { "x": 0, "y": 1.0, "valid": true, "desc": "Full down" },
      { "x": 0, "y": -1.0, "valid": true, "desc": "Full up" },
      { "x": 1.5, "y": 0, "valid": false, "desc": "Out of range (clamped)" }
    ],
    "save_state_slots": [
      { "slot": 0, "valid": true, "desc": "Slot 0 is valid" },
      { "slot": 9, "valid": true, "desc": "Slot 9 is valid (max)" },
      { "slot": -1, "valid": false, "desc": "Negative slot invalid" },
      { "slot": 10, "valid": false, "desc": "Slot 10 invalid (over max)" }
    ]
  },
  "document_helpers": {
    "file_extensions": [
      { "ext": "pdf", "viewer": "pdf_viewer", "desc": "PDF documents" },
      { "ext": "txt", "viewer": "text_viewer", "desc": "Plain text files" },
      { "ext": "md", "viewer": "markdown_viewer", "desc": "Markdown files" },
      { "ext": "html", "viewer": "html_viewer", "desc": "HTML files" }
    ]
  }
}
