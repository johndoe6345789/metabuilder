{
  "$schema": "https://metabuilder.dev/schemas/package-metadata.schema.json",
  "packageId": "testing",
  "name": "Testing Framework",
  "version": "2.0.0",
  "description": "JSON-based testing framework for MetaBuilder packages with parameterized tests, mocks, and assertions",
  "author": "MetaBuilder",
  "license": "MIT",
  "category": "tools",
  "minLevel": 3,
  "primary": false,
  "icon": "static_content/icon.svg",
  "keywords": [
    "testing",
    "json",
    "unit-test",
    "framework",
    "assertions",
    "mocks",
    "parameterized"
  ],
  "dependencies": {},
  "devDependencies": {},
  "exports": {
    "components": [
      "TestRunner",
      "TestResults"
    ],
    "scripts": [
      "framework",
      "runner",
      "assertions",
      "mocks"
    ]
  },
  "tests": {
    "scripts": [
      "tests/metadata.test.lua"
    ],
    "parameterized": [
      {
        "parameters": "tests/metadata.cases.json"
      }
    ]
  }
}
