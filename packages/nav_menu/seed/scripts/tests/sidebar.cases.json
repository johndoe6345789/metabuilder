{
  "render": [
    {
      "props": {
        "title": "Dashboard",
        "items": [
          { "label": "Home", "path": "/" },
          { "label": "Settings", "path": "/settings" }
        ]
      },
      "expectedChildren": 2,
      "desc": "renders header and items"
    }
  ],
  "render_default_title": [
    {
      "props": { "items": [] },
      "expectedTitle": "Menu",
      "desc": "default title when missing"
    }
