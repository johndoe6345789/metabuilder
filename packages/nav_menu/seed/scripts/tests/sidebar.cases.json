  "header": [
    { "props": { "title": "Admin" }, "expected": "Admin", "desc": "custom title" },
    { "props": {}, "expected": "Menu", "desc": "default title" }
  ],
  "item": [
    {
      "item": { "label": "Home", "path": "/" },
      "currentPath": "/",
      "expectedVariant": "secondary",
      "desc": "active item"
    },
    {
      "item": { "label": "Home", "path": "/" },
      "currentPath": "/other",
      "expectedVariant": "ghost",
      "desc": "inactive item"
    },
    {
      "item": { "label": "Home", "path": "/" },
      "currentPath": null,
      "expectedVariant": "ghost",
      "desc": "no current path"
    }
  ]
