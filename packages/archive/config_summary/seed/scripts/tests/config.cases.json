{
  "filterVisibleRows": [
    {
      "desc": "returns all rows when all are visible",
      "input": [
        { "label": "Row 1", "value": "Value 1", "visible": true },
        { "label": "Row 2", "value": "Value 2", "visible": true }
      ],
      "expected_count": 2
    },
    {
      "desc": "filters out hidden rows",
      "input": [
        { "label": "Visible", "value": "yes", "visible": true },
        { "label": "Hidden", "value": "no", "visible": false }
      ],
      "expected_count": 1
    },
    {
      "desc": "handles all hidden rows",
      "input": [
        { "label": "Hidden 1", "value": "no", "visible": false },
        { "label": "Hidden 2", "value": "no", "visible": false }
      ],
      "expected_count": 0
    },
    {
      "desc": "treats missing visible as true",
      "input": [
        { "label": "No Flag", "value": "shown" },
        { "label": "Explicit", "value": "also shown", "visible": true }
      ],
      "expected_count": 2
    },
    {
      "desc": "handles empty array",
      "input": [],
      "expected_count": 0
    },
    {
      "desc": "handles mixed visibility states",
      "input": [
        { "label": "A", "value": 1, "visible": true },
        { "label": "B", "value": 2, "visible": false },
        { "label": "C", "value": 3 },
        { "label": "D", "value": 4, "visible": false },
        { "label": "E", "value": 5, "visible": true }
      ],
      "expected_count": 3
    }
  ],
  "formatValue": [
    {
      "desc": "formats positive integer",
      "input": 42,
      "expected": "42"
    },
    {
      "desc": "formats zero",
      "input": 0,
      "expected": "0"
    },
    {
      "desc": "formats negative integer",
      "input": -10,
      "expected": "-10"
    },
    {
      "desc": "formats decimal number",
      "input": 3.14,
      "expected": "3.14"
    },
    {
      "desc": "returns string unchanged",
      "input": "hello world",
      "expected": "hello world"
    },
    {
      "desc": "returns empty string unchanged",
      "input": "",
      "expected": ""
    },
    {
      "desc": "handles string with numbers",
      "input": "123 items",
      "expected": "123 items"
    }
  ],
  "validSummaryRow": [
    {
      "desc": "row with string value",
      "input": { "label": "Name", "value": "Test" }
    },
    {
      "desc": "row with numeric value",
      "input": { "label": "Count", "value": 42 }
    },
    {
      "desc": "row with explicit visible true",
      "input": { "label": "Status", "value": "Active", "visible": true }
    },
    {
      "desc": "row with visible false",
      "input": { "label": "Hidden", "value": "Secret", "visible": false }
    },
    {
      "desc": "row with zero value",
      "input": { "label": "Empty", "value": 0 }
    },
    {
      "desc": "row with empty string value",
      "input": { "label": "Blank", "value": "" }
    }
  ],
  "invalidSummaryRow": [
    {
      "desc": "missing label",
      "input": { "value": "orphan" }
    },
    {
      "desc": "missing value",
      "input": { "label": "incomplete" }
    },
    {
      "desc": "empty object",
      "input": {}
    },
    {
      "desc": "null label",
      "input": { "label": null, "value": "test" }
    },
    {
      "desc": "null value",
      "input": { "label": "test", "value": null }
    }
  ],
  "summaryConfig": [
    {
      "desc": "basic config with title and rows",
      "input": {
        "title": "System Status",
        "rows": [
          { "label": "Version", "value": "1.0.0" },
          { "label": "Status", "value": "Running" }
        ]
      },
      "expected_row_count": 2
    },
    {
      "desc": "config with empty rows",
      "input": {
        "title": "Empty Section",
        "rows": []
      },
      "expected_row_count": 0
    },
    {
      "desc": "config with custom classes",
      "input": {
        "title": "Styled Section",
        "rows": [{ "label": "Item", "value": "Value" }],
        "wrapperClass": "custom-wrapper",
        "titleClass": "custom-title",
        "gridClass": "custom-grid"
      },
      "expected_row_count": 1
    },
    {
      "desc": "config with many rows",
      "input": {
        "title": "Large Section",
        "rows": [
          { "label": "A", "value": 1 },
          { "label": "B", "value": 2 },
          { "label": "C", "value": 3 },
          { "label": "D", "value": 4 },
          { "label": "E", "value": 5 }
        ]
      },
      "expected_row_count": 5
    }
  ],
  "aggregateConfig": [
    {
      "desc": "empty config",
      "input": {},
      "expected_sections": 0
    },
    {
      "desc": "config with schemas only",
      "input": {
        "schemas": [{ "name": "User" }, { "name": "Post" }]
      },
      "expected_sections": 1
    },
    {
      "desc": "config with multiple sections",
      "input": {
        "schemas": [{ "name": "User" }],
        "workflows": [{ "name": "Approval" }],
        "luaScripts": [{ "name": "validate" }]
      },
      "expected_sections": 3
    },
    {
      "desc": "config with all standard sections",
      "input": {
        "schemas": [],
        "workflows": [],
        "luaScripts": [],
        "users": [],
        "packages": []
      },
      "expected_sections": 5
    },
    {
      "desc": "config with custom sections",
      "input": {
        "schemas": [{ "name": "Test" }],
        "customSection": [{ "custom": "data" }]
      },
      "expected_sections": 2
    }
  ],
  "styleConfig": [
    {
      "desc": "default style config",
      "input": {
        "defaultWrapperClass": "wrapper",
        "defaultTitleClass": "title",
        "defaultGridClass": "grid",
        "defaultRowClass": "row",
        "defaultLabelClass": "label",
        "defaultValueClass": "value"
      },
      "expected_keys": 6
    }
  ]
}
