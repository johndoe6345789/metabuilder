{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://metabuilder.dev/schemas/json-script-test-logic.schema.json",
  "title": "JSON Script Test Logic",
  "description": "Test assertion functions for parameterized testing",
  "type": "object",
  "required": ["schema_version", "package", "functions"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "package": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "functions": {
      "type": "array",
      "description": "Test assertion functions",
      "items": {
        "type": "object",
        "required": ["name", "params", "body"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^test_"
          },
          "params": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "const": "testCase" },
                "type": { "const": "object" }
              }
            }
          },
          "body": {
            "type": "array"
          }
        }
      }
    }
  }
}
