{
  "$schema": "https://metabuilder.dev/schemas/package-metadata.schema.json",
  "packageId": "code_editor",
  "name": "Code Editor",
  "version": "1.0.0",
  "description": "Code editor components for JSON, Lua, and theme editing",
  "author": "MetaBuilder",
  "license": "MIT",
