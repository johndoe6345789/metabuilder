{
  "$schema": "https://metabuilder.dev/schemas/json-script.schema.json",
  "schemaVersion": "2.2.0",
  "package": "social_hub",
  "description": "Social hub feed, composer, and statistics functions",
  "functions": [
    {
      "id": "feed_render_post",
      "name": "renderPost",
      "exported": true,
      "description": "Render a single social post",
      "category": "feed",
      "luaScript": "feed.lua"
    },
    {
      "id": "feed_render_feed",
      "name": "renderFeed",
      "exported": true,
      "description": "Render a feed of multiple posts",
      "category": "feed",
      "luaScript": "feed.lua"
    },
    {
      "id": "feed_empty_state",
      "name": "emptyState",
      "exported": true,
      "description": "Render empty feed state when no posts exist",
      "category": "feed",
      "luaScript": "feed.lua"
    },
    {
      "id": "composer_render",
      "name": "renderComposer",
      "exported": true,
      "description": "Render the post composer UI",
      "category": "composer",
      "luaScript": "composer.lua"
    },
    {
      "id": "composer_validate",
      "name": "validateContent",
      "exported": true,
      "description": "Validate post content before submission",
      "category": "composer",
      "luaScript": "composer.lua"
    },
    {
      "id": "composer_submit",
      "name": "submitPost",
      "exported": true,
      "description": "Submit a new post to the feed",
      "category": "composer",
      "luaScript": "composer.lua"
    },
    {
      "id": "stats_render_stat",
      "name": "renderStat",
      "exported": true,
      "description": "Render a single statistic card",
      "category": "stats",
      "luaScript": "stats.lua"
    },
    {
      "id": "stats_render_stats",
      "name": "renderStats",
      "exported": true,
      "description": "Render the stats grid with multiple metrics",
      "category": "stats",
      "luaScript": "stats.lua"
    },
    {
      "id": "stats_render_hero",
      "name": "renderHero",
      "exported": true,
      "description": "Render hero section with user statistics",
      "category": "stats",
      "luaScript": "stats.lua"
    }
  ],
  "exports": {
    "functions": [
      "renderPost",
      "renderFeed",
      "emptyState",
      "renderComposer",
      "validateContent",
      "submitPost",
      "renderStat",
      "renderStats",
      "renderHero"
    ]
  }
}
