{
  "packageId": "role_editor",
  "name": "Role Editor",
  "version": "1.0.0",
  "description": "User role management and permission configuration UI",
  "icon": "static_content/icon.svg",
  "author": "MetaBuilder",
  "category": "ui",
  "dependencies": [],
  "devDependencies": [
    "lua_test"
  ],
  "exports": {
    "components": [
      "RoleEditor",
      "RoleCard"
    ],
    "scripts": [
      "role",
      "config"
    ]
  },
  "tests": {
    "scripts": [
      "tests/role.test.lua",
      "tests/config.test.lua"
    ],
    "cases": [
      "tests/role.cases.json",
      "tests/config.cases.json"
    ]
  },
  "minLevel": 3,
  "primary": true,
  "permissions": {
    "role.delete": {
      "minLevel": 5,
      "description": "Delete roles"
    },
    "role.assign": {
      "minLevel": 4,
      "description": "Assign roles to users"
    },
    "role.create": {
      "minLevel": 4,
      "description": "Create roles"
    },
    "role.view": {
      "minLevel": 3,
      "description": "View roles"
    },
    "role.edit": {
      "minLevel": 4,
      "description": "Edit roles"
    }
  }
}
