{
  "$schema": "https://metabuilder.dev/schemas/package-metadata.schema.json",
  "packageId": "package_manager",
  "name": "Package Manager",
  "version": "1.0.0",
  "description": "Package lifecycle management including install, uninstall, enable/disable, and dependency visualization",
  "author": "MetaBuilder",
  "license": "MIT",
  "category": "tools",
  "icon": "static_content/icon.svg",
  "minLevel": 4,
  "primary": true,
  "keywords": ["packages", "install", "dependencies", "management", "registry"],
  "dependencies": {
    "data_table": "*",
    "ui_permissions": "*"
  },
  "devDependencies": {
    "testing": "*"
  },
  "exports": {
    "components": [
      "PackageManager",
      "PackageBrowser",
      "PackageCard",
      "PackageDetails",
      "DependencyViewer"
    ],
    "scripts": [
      "packages",
      "dependencies"
    ]
  },
  "tests": {
    "suites": [
      "tests/metadata.test.json"
    ]
  }
}
